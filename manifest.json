{
  "manifest_version": 3,
  "name": "YouTube Ad Skipper",
  "version": "1.0",
  "description": "Automatically skips YouTube advertisements by fast-forwarding them to completion",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "popup/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["popup/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "YouTube Ad Skipper"
  },
  "icons": {
    "16": "popup/logo.svg",
    "32": "popup/logo.svg",
    "48": "popup/logo.svg",
    "128": "popup/logo.svg"
  }
}